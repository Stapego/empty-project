---
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
const platform = "github";
const username = "withastro";
const props = Astro.props;
import Social from './Social.astro';
---

<style>
  header {
    width: 100%;
    display: flex;
    justify-content: space-between; /* Распределяем элементы по ширине */
    align-items: center;
        margin-top: 2rem;
    flex-wrap: nowrap; /* Запрещаем перенос на новую строку */
  }

  nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .logo {
    /* Добавьте стили для логотипа по необходимости */
    height: 2.5rem; /* Примерный размер */
    margin-right: 1rem; /* Отступ от других элементов */
  }
</style>

<header>
  <nav>
    <Hamburger />
    <Navigation />
  </nav>
  <div class="logo">
    <!-- Ваш логотип - можно использовать img или svg -->
    <img src="/logo.svg" alt="Логотип" width="40" height="40" />
    <!-- Или: -->
    <!-- <svg class="logo" ...>...</svg> -->
  </div>
  <Social />
    <ThemeIcon />
  </div>
  <a href="/" class="logo">
    <img src="../" alt="Логотип" width="40" height="40" />
  </a>
</header>